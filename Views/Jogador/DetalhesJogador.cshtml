@using futebol2022.Models
@model Jogador

<form method="post" asp-controller="Jogador" asp-action="DeletarJogador" enctype="multipart/form-data">
    <div class="container" style="border: 1px solid gray;border-radius: 10px;width: 60%;">
        <div class="row mt-3 mb-4">
            <div class="col-sm-12 text-left">
                <h4>Detalhes do Jogador</h4>
            </div>
        </div>        

        <div class="row">
            <div class="col-sm-12">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show ets-font-size-alert" role="alert">
                        <i class="fas fa-exclamation-circle"></i>
                        @ViewBag.Error
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <label asp-for="NomeJogador"></label><br />
                    <input type="text" asp-for="NomeJogador" class="form-control" readonly />
                    <span class="text-danger" asp-validation-for="NomeJogador"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3">
                <div class="form-group" style="margin-bottom:">
                    <label asp-for="Apelido"></label><br />
                    <input type="text" asp-for="Apelido" class="form-control" readonly />
                </div>
            </div>

            <div class="col-sm-3">
                <div class="form-group">
                    <label asp-for="DataNascimento"></label><br />
                    <input asp-for="DataNascimento" class="form-control" readonly />
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label asp-for="Jogos"></label><br />
                    <input asp-for="Jogos" class="form-control" readonly />
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group">
                    <label asp-for="Gols"></label><br />
                    <input asp-for="Gols" class="form-control" readonly/>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    <a asp-controller="Jogador" asp-action="EditarJogador" asp-route-id="@Model.Id" class="btn btn-success"><i class="fas fa-edit"></i> Editar</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Voltar</a>
                </div>
            </div>
        </div>
    </div>

</form>